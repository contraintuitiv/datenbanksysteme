ALTER TABLE IF EXISTS public.stories
    OWNER to zjerzak;

REVOKE ALL ON TABLE public.stories FROM dbs_world;

GRANT SELECT ON TABLE public.stories TO dbs_world;

GRANT ALL ON TABLE public.stories TO zjerzak;

COMMENT ON COLUMN public.stories.id
    IS 'The items unique id';

COMMENT ON COLUMN public.stories.deleted
    IS 'true if the story is deleted';

COMMENT ON COLUMN public.stories.type
    IS 'The type of item. Here always equals story';

COMMENT ON COLUMN public.stories.by
    IS 'The username of the author of the story';

COMMENT ON COLUMN public.stories.created
    IS 'Creation date of the story, in Unix Time';

COMMENT ON COLUMN public.stories.title
    IS 'The title of the story. HTML.';

COMMENT ON COLUMN public.stories.body
    IS 'The story text. HTML.';

COMMENT ON COLUMN public.stories.dead
    IS 'true if the story is dead';

COMMENT ON COLUMN public.stories.parent
    IS 'Always NULL.';

COMMENT ON COLUMN public.stories.url
    IS 'The URL pointing to article which this story is based on';

COMMENT ON COLUMN public.stories.score
    IS 'The storys score';

COMMENT ON COLUMN public.stories.descendants
    IS 'Total comment count';


Tabelle users 
__________________________________________________________________________
-- Table: public.users

-- DROP TABLE IF EXISTS public.users;

CREATE TABLE IF NOT EXISTS public.users
(
    id character varying COLLATE pg_catalog."default" NOT NULL,
    created timestamp without time zone,
    karma integer DEFAULT '-1'::integer,
    about character varying COLLATE pg_catalog."default" DEFAULT 'null'::character varying,
    CONSTRAINT users_pkey PRIMARY KEY (id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.users
    OWNER to zjerzak;

REVOKE ALL ON TABLE public.users FROM dbs_world;

GRANT SELECT ON TABLE public.users TO dbs_world;

GRANT ALL ON TABLE public.users TO zjerzak;

COMMENT ON COLUMN public.users.id
    IS 'The users unique username. Case-sensitive. Required.';

COMMENT ON COLUMN public.users.created
    IS 'Creation date of the user, in Unix Time.';

COMMENT ON COLUMN public.users.karma
    IS 'The users karma.';

COMMENT ON COLUMN public.users.about
    IS 'The users optional self-description. HTML.';
