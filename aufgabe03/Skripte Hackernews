Tabelle Comments 
__________________________________________________________________________

-- Table: public.comments

-- DROP TABLE IF EXISTS public.comments;

CREATE TABLE IF NOT EXISTS public.comments
(
    id integer NOT NULL,
    deleted boolean DEFAULT false,
    type character varying COLLATE pg_catalog."default",
    by character varying COLLATE pg_catalog."default",
    created timestamp without time zone,
    title text COLLATE pg_catalog."default" DEFAULT 'null'::text,
    body text COLLATE pg_catalog."default",
    dead boolean,
    parent integer,
    url character varying COLLATE pg_catalog."default" DEFAULT 'null'::character varying,
    score integer,
    descendants integer,
    CONSTRAINT comments_pkey PRIMARY KEY (id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.comments
    OWNER to zjerzak;

REVOKE ALL ON TABLE public.comments FROM dbs_world;

GRANT SELECT ON TABLE public.comments TO dbs_world;

GRANT ALL ON TABLE public.comments TO zjerzak;

COMMENT ON COLUMN public.comments.id
    IS 'The comments unique id';

COMMENT ON COLUMN public.comments.deleted
    IS 'true if the comment is deleted';

COMMENT ON COLUMN public.comments.type
    IS 'The type of item. Here always equals comment';

COMMENT ON COLUMN public.comments.by
    IS 'The username of the comments author';

COMMENT ON COLUMN public.comments.created
    IS 'Creation date of the comment, in Unix Time';

COMMENT ON COLUMN public.comments.title
    IS 'Always NULL.';

COMMENT ON COLUMN public.comments.body
    IS 'The comment. HTML.';

COMMENT ON COLUMN public.comments.dead
    IS 'true if the comment is dead';

COMMENT ON COLUMN public.comments.parent
    IS 'The comments parent: either another comment or the relevant story';

COMMENT ON COLUMN public.comments.url
    IS 'Always NULL.';

COMMENT ON COLUMN public.comments.score
    IS 'The comments score';

COMMENT ON COLUMN public.comments.descendants
    IS 'Total nested comment count';



Tabelle jobs 
_____________________________________________________________________

-- Table: public.jobs

-- DROP TABLE IF EXISTS public.jobs;

CREATE TABLE IF NOT EXISTS public.jobs
(
    id integer NOT NULL,
    deleted boolean DEFAULT false,
    type character varying COLLATE pg_catalog."default",
    by character varying COLLATE pg_catalog."default",
    created timestamp without time zone,
    title text COLLATE pg_catalog."default",
    body text COLLATE pg_catalog."default",
    dead boolean,
    parent integer DEFAULT '-1'::integer,
    url character varying COLLATE pg_catalog."default",
    score integer,
    descendants integer DEFAULT '-1'::integer,
    CONSTRAINT jobs_pkey PRIMARY KEY (id)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.jobs
    OWNER to zjerzak;

REVOKE ALL ON TABLE public.jobs FROM dbs_world;

GRANT SELECT ON TABLE public.jobs TO dbs_world;

GRANT ALL ON TABLE public.jobs TO zjerzak;

COMMENT ON COLUMN public.jobs.id
    IS 'The items unique id';

COMMENT ON COLUMN public.jobs.deleted
    IS 'true if the job is deleted';

COMMENT ON COLUMN public.jobs.type
    IS 'The type of item. Here always equals job';

COMMENT ON COLUMN public.jobs.by
    IS 'The username of the author of the job';

COMMENT ON COLUMN public.jobs.created
    IS 'Creation date of the job, in Unix Time';

COMMENT ON COLUMN public.jobs.title
    IS 'The title of the job. HTML.';

COMMENT ON COLUMN public.jobs.body
    IS 'The job text. HTML.';

COMMENT ON COLUMN public.jobs.dead
    IS 'true if the job is dead';

COMMENT ON COLUMN public.jobs.parent
    IS 'Always -1';

COMMENT ON COLUMN public.jobs.url
    IS 'The URL pointing to article which this story is based on';

COMMENT ON COLUMN public.jobs.score
    IS 'The storys score';

COMMENT ON COLUMN public.jobs.descendants
    IS 'Always -1';


Tabelle Spatial_re_sys
__________________________________________________________________________
-- Table: public.spatial_ref_sys

-- DROP TABLE IF EXISTS public.spatial_ref_sys;

CREATE TABLE IF NOT EXISTS public.spatial_ref_sys
(
    srid integer NOT NULL,
    auth_name character varying(256) COLLATE pg_catalog."default",
    auth_srid integer,
    srtext character varying(2048) COLLATE pg_catalog."default",
    proj4text character varying(2048) COLLATE pg_catalog."default",
    CONSTRAINT spatial_ref_sys_pkey PRIMARY KEY (srid),
    CONSTRAINT spatial_ref_sys_srid_check CHECK (srid > 0 AND srid <= 998999)
)

TABLESPACE pg_default;

ALTER TABLE IF EXISTS public.spatial_ref_sys
    OWNER to postgres;

REVOKE ALL ON TABLE public.spatial_ref_sys FROM PUBLIC;

GRANT SELECT ON TABLE public.spatial_ref_sys TO PUBLIC;

GRANT ALL ON TABLE public.spatial_ref_sys TO postgres;

